@page
@model AboutModel
@{
    ViewData["Title"] = "About";
}

<div class="min-h-screen bg-white flex items-center justify-center px-4 py-10">
    <div class="max-w-4xl w-full bg-white p-10 rounded-xl shadow-md border border-gray-200">

        <h2 class="text-4xl font-bold text-[#0a0e27] mb-6 text-center">About CompleteOffice</h2>

        <p class="text-gray-700 text-lg leading-relaxed mb-6">
            CompleteOffice is an integrated platform designed to streamline workplace operations — from communication and task tracking to approvals and reporting.
            Built with simplicity and efficiency in mind, it helps organizations stay productive, aligned, and agile.
        </p>

        <div class="grid md:grid-cols-2 gap-6">
            <div>
                <h3 class="text-xl font-semibold text-[#0a0e27] mb-2">Our Mission</h3>
                <p class="text-gray-700">
                    Empower businesses with intuitive, scalable tools that simplify daily operations and drive collaboration.
                </p>
            </div>

            <div>
                <h3 class="text-xl font-semibold text-[#0a0e27] mb-2">What We Offer</h3>
                <ul class="list-disc list-inside text-gray-700 space-y-1">
                    <li>Task & Workflow Automation</li>
                    <li>Approval Management</li>
                    <li>Advanced Reporting & Insights</li>
                    <li>Secure User Access Control</li>
                </ul>
            </div>
        </div>

        <div class="mt-8 text-center">
            <a href="/Contact" class="inline-block bg-[#0a0e27] text-white px-6 py-3 rounded-lg hover:bg-[#06081c] transition">
                Get in Touch
            </a>
        </div>
    </div>
</div>
