@{  
    var isAuthenticated = User?.Identity?.IsAuthenticated ?? false;  
    var currentPage = ViewContext.RouteData.Values["page"]?.ToString();
}  

<!DOCTYPE html>  
<html lang="en">  
<head>  
    <meta charset="utf-8" />  
    <title>@ViewData["Title"] - CompleteOffice</title>  
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />  
    <link href="~/css/site.css" rel="stylesheet" />  
    <script src="https://cdn.tailwindcss.com"></script>  
</head>  
<body class="font-sans antialiased text-gray-800">  

    <!-- Nav Bar (shared across pages) -->  
    <header class="absolute top-0 left-0 w-full z-10">  
        <nav class="flex items-center justify-between px-6 py-4 bg-transparent text-white">  
            @if (!isAuthenticated || currentPage == "/Index")  
            {  
                 <a asp-page="/Index" class="text-2xl font-bold text-gray-500 hover:text-[#0a0e27] transition">  
                CompleteOffice  
                </a>
            }
            else
            {
                <div class="w-[10rem]"></div>
            }
            <ul class="hidden md:flex space-x-6 text-lg">  
                @if (isAuthenticated)  
                {  
                    <li><a class="text-gray-500 hover:underline" asp-page="/Index">Home</a></li>  
                }  
                <li><a class="text-gray-500 hover:underline" asp-page="/About">About</a></li>  
                <li><a class="text-gray-500 hover:underline" asp-page="/Contact">Contact</a></li>  
            </ul>  
           <div class="hidden md:flex space-x-4">  
                <partial name="LoginPartial" />  
           </div>  
        </nav>  
    </header>  

    <!-- Page Content -->  
    <main role="main">  
        @RenderBody()  
    </main>  

</body>  
</html>
