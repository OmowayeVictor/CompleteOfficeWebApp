@page
@model CompleteOfficeApplication.Pages.Auth.SignInModel
@{
    ViewData["Title"] = "Login";
}

<div class="min-h-screen bg-white flex items-center justify-center px-4">
    <div class="w-full max-w-md shadow-lg rounded-xl p-8 border border-gray-200">
        <h2 class="text-3xl font-bold text-center text-[#0a0e27] mb-6">Welcome Back</h2>

        <div asp-validation-summary="All" class="text-red-500 text-sm mb-4 p-3 rounded"></div>

        <form method="post" class="space-y-5">
            <div>
                <label asp-for="Login.Email" class="block text-sm font-medium text-gray-700 mb-1">Email</label>
                <input asp-for="Login.Email" class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-[#0a0e27]" />
                <span asp-validation-for="Login.Email" class="text-red-500 text-sm"></span>
            </div>

            <div>
                <label asp-for="Login.Password" class="block text-sm font-medium text-gray-700 mb-1">Password</label>
                <input asp-for="Login.Password" type="password" class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-[#0a0e27]" />
                <span asp-validation-for="Login.Password" class="text-red-500 text-sm"></span>
            </div>

            <div class="flex items-center justify-between">
                <label class="inline-flex items-center">
                    <input asp-for="Login.RememberMe" class="mr-2" />
                    <span class="text-sm text-gray-600">Remember Me</span>
                </label>
                <a href="/Account/ForgotPassword" class="text-sm text-[#0a0e27] hover:underline">Forgot Password?</a>
            </div>

            <button type="submit" class="w-full bg-[#0a0e27] text-white py-2 rounded-lg font-semibold hover:bg-[#06081c] transition">
                Sign In
            </button>
        </form>
    </div>
</div>
