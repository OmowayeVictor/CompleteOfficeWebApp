@page
@model CompleteOfficeApplication.Pages.Account.ResetPasswordModel
@{
    ViewData["Title"] = "Reset Password";
}
<div class="flex items-center justify-center min-h-screen bg-gray-100">
    <div class="bg-white shadow-xl rounded-lg p-8 w-full max-w-md">
        <h2 class="text-2xl font-bold mb-6 text-gray-800 text-center">Reset your password</h2>

        <div asp-validation-summary="All" class="text-red-500 text-sm mb-4 p-3 rounded"></div>
        <form method="post" class="space-y-4">
            <input type="hidden" asp-for="ResetPassword.Token" />
            <input type="hidden" asp-for="ResetPassword.Email" />

            <div>
                <label asp-for="ResetPassword.Password" class="block text-sm font-medium text-gray-700">New Password</label>
                <input asp-for="ResetPassword.Password" class="mt-1 w-full border border-gray-300 rounded-md px-4 py-2 focus:ring-2 focus:ring-blue-500 focus:outline-none" />
                <span asp-validation-for="ResetPassword.Password" class="text-red-500 text-sm"></span>
            </div>

            <div>
                <label asp-for="ResetPassword.ConfirmPassword" class="block text-sm font-medium text-gray-700">Confirm Password</label>
                <input asp-for="ResetPassword.ConfirmPassword" class="mt-1 w-full border border-gray-300 rounded-md px-4 py-2 focus:ring-2 focus:ring-blue-500 focus:outline-none" />
                <span asp-validation-for="ResetPassword.ConfirmPassword" class="text-red-500 text-sm"></span>
            </div>

            <button type="submit" class="w-full bg-green-600 hover:bg-green-700 text-white font-bold py-2 px-4 rounded">
                Reset Password
            </button>
        </form>
    </div>
</div>
