@page
@model CompleteOfficeApplication.Pages.Account.Enabale2FAModel
@{
}
<div class="max-w-xl mx-auto bg-white p-8 shadow-md rounded-xl mt-10">
    <h2 class="text-3xl font-bold text-[#0a0e27] mb-6 text-center">Set Up Two-Factor Authentication</h2>

    <p class="text-gray-700 mb-4">
        Scan the QR code with your mobile authenticator app (like Google Authenticator), or manually enter the key.
    </p>

    <div class="flex justify-center mb-6">
        @* <p>@Model.QRCodeUri</p> *@
        <img src="@Model.QRCodeUri" alt="Scan this QR" class="border p-2 rounded" />
    </div>

    <div class="bg-gray-100 p-4 rounded mb-6">
        <p class="text-sm text-gray-600 mb-1">Manual Key:</p>
        <div class="text-lg font-mono text-[#0a0e27]">@Model.Key</div>
    </div>

    <form method="post" class="space-y-4">
        <div>
            <label asp-for="Enable2FAModel.Code" class="block mb-1 font-medium">Enter Code from App</label>
            <input asp-for="Enable2FAModel.Code" class="w-full px-4 py-2 border rounded focus:outline-none focus:ring-2 focus:ring-[#0a0e27]" />
            <span asp-validation-for="Enable2FAModel.Code" class="text-red-500 text-sm"></span>
        </div>

        <button type="submit" class="w-full bg-[#0a0e27] text-white py-2 rounded hover:bg-[#060b1d] transition">
            Verify and Enable 2FA
        </button>
    </form>
</div>