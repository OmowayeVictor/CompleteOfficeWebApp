@page
@model CompleteOfficeApplication.Pages.Account.ForgotPasswordConfirmationModel
@{
    ViewData["Title"] = "Email Sent";
}
<div class="flex items-center justify-center min-h-screen bg-gray-100">
    <div class="bg-white p-8 rounded-lg shadow-md max-w-md w-full text-center">
        <h2 class="text-2xl font-bold text-green-600 mb-4">Check your email</h2>
        <p class="text-gray-600">
            We've sent a password reset link to your email. If you don't see it, check your spam or junk folder.
        </p>
    </div>
</div>
