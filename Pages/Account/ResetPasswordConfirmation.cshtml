@page
@model CompleteOfficeApplication.Pages.Account.ResetPasswordConfirmationModel
@{
    ViewData["Title"] = "Password Reset Successful";
}
<div class="flex items-center justify-center min-h-screen bg-gray-100">
    <div class="bg-white p-8 rounded-lg shadow-md max-w-md w-full text-center">
        <h2 class="text-2xl font-bold text-blue-600 mb-4">Password Reset</h2>
        <p class="text-gray-600">
            Your password has been reset. You can now log in with your new credentials.
        </p>
        <a href="/Account/Login" class="mt-4 inline-block bg-blue-600 hover:bg-blue-700 text-white font-semibold px-6 py-2 rounded">
            Go to Login
        </a>
    </div>
</div>
