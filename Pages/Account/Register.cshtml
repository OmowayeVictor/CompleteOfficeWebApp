@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="min-h-screen bg-[#06081c] flex items-center justify-center px-4 text-gray-100">
    <div class="w-full max-w-md bg-[#0a0e27] p-8 rounded-xl shadow-lg">
        <h2 class="text-3xl font-bold mb-6 text-white text-center">Create an Account</h2>

        <div asp-validation-summary="All" class="text-red-400 text-sm mb-4 bg-opacity-30 p-3 rounded"></div>


        <form method="post" class="space-y-4">

            <div>
                <label asp-for="Registration.Email" class="block mb-1">Email</label>
                <input asp-for="Registration.Email" type="email" class="w-full px-4 py-2 rounded bg-gray-800 text-white border border-gray-600 focus:outline-none focus:ring-2 focus:ring-blue-500" />
                <span asp-validation-for="Registration.Email" class="text-red-400 text-sm"></span>

            </div>

            <div>
                <label asp-for="Registration.Password" class="block mb-1">Password</label>
                <input asp-for="Registration.Password" type="password" class="w-full px-4 py-2 rounded bg-gray-800 text-white border border-gray-600 focus:outline-none focus:ring-2 focus:ring-blue-500" />
                <span asp-validation-for="Registration.Password" class="text-red-400 text-sm"></span>

            </div>

            <div>
                <label asp-for="Registration.Department" class="block mb-1">Department</label>
                <select asp-for="Registration.Department" asp-items="Model.DepartmentOptions"
                        class="w-full px-4 py-2 rounded bg-gray-800 text-white border border-gray-600 focus:outline-none focus:ring-2 focus:ring-blue-500">
                    <option value="">-- Select Department --</option>
                </select>
                <span asp-validation-for="Registration.Department" class="text-red-400 text-sm"></span>

            </div>

            <div>
                <label asp-for="Registration.Position" class="block mb-1">Position</label>
                <select asp-for="Registration.Position" asp-items="Model.PositionOptions"
                        class="w-full px-4 py-2 rounded bg-gray-800 text-white border border-gray-600 focus:outline-none focus:ring-2 focus:ring-blue-500">
                    <option value="">-- Select Position --</option>
                </select>
                <span asp-validation-for="Registration.Position" class="text-red-400 text-sm"></span>
            </div>

            <button type="submit" class="w-full bg-white text-[#0a0e27] py-2 rounded font-semibold hover:bg-gray-100 transition">
                Register
            </button>
        </form>
    </div>
</div>
