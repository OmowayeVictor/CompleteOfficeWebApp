@page
@model CompleteOfficeApplication.Pages.Account.ChangePasswordModel
@{
    ViewData["Title"] = "Change Password";
}

<div class="max-w-md mx-auto mt-20 bg-white p-8 rounded-lg shadow-md">
    <h2 class="text-2xl font-bold text-center mb-6 text-[#0a0e27]">Change Password</h2>

    <form method="post" class="space-y-4">
        <div>
            <label asp-for="ChangePassword.OldPassword" class="block text-sm font-medium text-gray-700"></label>
            <input asp-for="ChangePassword.OldPassword" class="w-full p-2 border rounded mt-1" />
            <span asp-validation-for="ChangePassword.OldPassword" class="text-red-500 text-sm"></span>
        </div>

        <div>
            <label asp-for="ChangePassword.Password" class="block text-sm font-medium text-gray-700"></label>
            <input asp-for="ChangePassword.Password" class="w-full p-2 border rounded mt-1" />
            <span asp-validation-for="ChangePassword.Password" class="text-red-500 text-sm"></span>
        </div>

        <div>
            <label asp-for="ChangePassword.ConfirmPassword" class="block text-sm font-medium text-gray-700"></label>
            <input asp-for="ChangePassword.ConfirmPassword" class="w-full p-2 border rounded mt-1" />
            <span asp-validation-for="ChangePassword.ConfirmPassword" class="text-red-500 text-sm"></span>
        </div>

        <button type="submit" class="w-full bg-[#0a0e27] text-white py-2 rounded hover:bg-[#151a3c] transition">
            Update Password
        </button>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
