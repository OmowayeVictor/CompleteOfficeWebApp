@page
@model CompleteOfficeApplication.Pages.ContactModel
@{
    ViewData["Title"] = "Contact Us";
}

<div class="min-h-screen bg-white flex items-center justify-center px-4 py-10">
    <div class="w-full max-w-2xl bg-white p-8 rounded-xl shadow-lg border border-gray-200">
        <h2 class="text-3xl font-bold text-[#0a0e27] mb-6 text-center">Contact Us</h2>

        <div asp-validation-summary="All" class="text-red-500 text-sm mb-4 p-3 rounded"></div>
        <form method="post" class="space-y-5">
            <div>
                <label asp-for="ContactUs.Name" class="block text-sm font-medium text-gray-700 mb-1">Name</label>
                <input asp-for="ContactUs.Name" class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-[#0a0e27]" />
                <span asp-validation-for="ContactUs.Name" class="text-red-500 text-sm"></span>
            </div>

            <div>
                <label asp-for="ContactUs.Email" class="block text-sm font-medium text-gray-700 mb-1">Email</label>
                <input asp-for="ContactUs.Email" class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-[#0a0e27]" />
                <span asp-validation-for="ContactUs.Email" class="text-red-500 text-sm"></span>
            </div>

            <div>
                <label asp-for="ContactUs.Subject" class="block text-sm font-medium text-gray-700 mb-1">Subject</label>
                <input asp-for="ContactUs.Subject" class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-[#0a0e27]" />
                <span asp-validation-for="ContactUs.Subject" class="text-red-500 text-sm"></span>
            </div>

            <div>
                <label asp-for="ContactUs.Message" class="block text-sm font-medium text-gray-700 mb-1">Message</label>
                <textarea asp-for="ContactUs.Message" rows="4" class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-[#0a0e27]"></textarea>
                <span asp-validation-for="ContactUs.Message" class="text-red-500 text-sm"></span>
            </div>

            <button type="submit" class="w-full bg-[#0a0e27] text-white py-2 rounded-lg font-semibold hover:bg-[#06081c] transition">
                Send Message
            </button>
        </form>
    </div>
</div>